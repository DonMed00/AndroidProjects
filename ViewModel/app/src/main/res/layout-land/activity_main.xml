<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/lblHomeTeamPoints"
        android:layout_width="96dp"
        android:layout_height="73dp"
        android:layout_marginStart="92dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/lblVisitingTeamPoints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/lblVisitingTeamPoints"
        android:layout_width="71dp"
        android:layout_height="74dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/lblHomeTeamPoints"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHomeTeam3Points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="68dp"
        android:text="+3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblHomeTeamPoints" />

    <Button
        android:id="@+id/btnHomeTeam2Points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="56dp"
        android:text="+2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHomeTeam3Points" />

    <Button
        android:id="@+id/btnHomeTeamFreeThrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="48dp"
        android:text="+1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnHomeTeam2Points" />

    <Button
        android:id="@+id/btnVisitingTeam3Points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="+3"
        app:layout_constraintStart_toEndOf="@+id/btnHomeTeam3Points"
        app:layout_constraintTop_toTopOf="@+id/btnHomeTeam3Points" />

    <Button
        android:id="@+id/btnVisitingTeam2Points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="56dp"
        android:text="+2"
        app:layout_constraintStart_toEndOf="@+id/btnHomeTeam2Points"
        app:layout_constraintTop_toBottomOf="@+id/btnVisitingTeam3Points" />

    <Button
        android:id="@+id/btnVisitingTeamFreeThrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="48dp"
        android:text="+1"
        app:layout_constraintStart_toEndOf="@+id/btnHomeTeamFreeThrow"
        app:layout_constraintTop_toBottomOf="@+id/btnVisitingTeam2Points" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="152dp"
        android:text="Reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>